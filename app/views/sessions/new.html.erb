<% content_for :title, "Sign In - RighteousDispatch" %>

<div class="max-w-md mx-auto mt-8 sm:mt-16">
  <div class="border border-base-content/20">
    <div class="bg-base-content/5 p-3 border-b border-base-content/20">
      <div class="text-[10px] sm:text-xs font-bold">SIGN IN</div>
    </div>

    <div class="p-4 sm:p-6">
      <p class="text-[10px] sm:text-xs text-base-content/60 mb-6">
        Enter your credentials to access RighteousDispatch.
      </p>

      <%= form_with url: session_path, class: "space-y-4" do |f| %>
        <div>
          <label class="text-[10px] text-base-content/60 mb-1 block font-bold">EMAIL</label>
          <%= f.email_field :email, required: true, autofocus: true,
              class: "w-full border border-base-content/20 bg-base-100 px-3 py-2 text-xs focus:border-primary focus:outline-none",
              placeholder: "your@email.com" %>
        </div>

        <div>
          <label class="text-[10px] text-base-content/60 mb-1 block font-bold">PASSWORD</label>
          <%= f.password_field :password, required: true,
              class: "w-full border border-base-content/20 bg-base-100 px-3 py-2 text-xs focus:border-primary focus:outline-none",
              placeholder: "********" %>
        </div>

        <div class="flex items-center gap-2">
          <%= f.check_box :remember_me, class: "border border-base-content/20" %>
          <label class="text-[10px] text-base-content/60">REMEMBER ME</label>
        </div>

        <div class="pt-2">
          <%= f.submit "SIGN IN",
              class: "w-full bg-primary text-primary-content hover:bg-primary/80 px-4 py-2.5 text-[10px] sm:text-xs font-bold transition-colors cursor-pointer" %>
        </div>
      <% end %>

      <div class="mt-6 pt-4 border-t border-base-content/10 space-y-2">
        <div class="text-[10px] text-base-content/60">
          <%= link_to "FORGOT PASSWORD?", new_password_path, class: "text-primary hover:underline font-bold" %>
        </div>
        <div class="text-[10px] text-base-content/60">
          DON'T HAVE AN ACCOUNT?
          <%= link_to "REGISTER", new_registration_path, class: "text-primary hover:underline font-bold" %>
        </div>
        <div class="text-[10px] text-base-content/60">
          <%= link_to "RESEND CONFIRMATION EMAIL", new_confirmation_path, class: "text-primary hover:underline font-bold" %>
        </div>
      </div>
    </div>
  </div>
</div>
