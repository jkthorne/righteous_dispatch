<% content_for :title, "Edit Subscriber - RighteousDispatch" %>

<div class="max-w-lg mx-auto">
  <div class="mb-6">
    <div class="text-[10px] text-base-content/60 mb-2">
      <%= link_to "SUBSCRIBERS", subscribers_path, class: "hover:underline" %> / EDIT
    </div>
    <h1 class="text-lg sm:text-xl font-bold">EDIT SUBSCRIBER</h1>
  </div>

  <div class="border border-base-content/20">
    <div class="bg-base-content/5 p-3 border-b border-base-content/20">
      <div class="text-[10px] sm:text-xs font-bold">SUBSCRIBER DETAILS</div>
    </div>
    <div class="p-4 sm:p-6">
      <%= render "form", subscriber: @subscriber %>
    </div>
  </div>

  <div class="mt-4">
    <%= button_to "DELETE SUBSCRIBER", subscriber_path(@subscriber), method: :delete,
        data: { turbo_confirm: "Are you sure you want to delete this subscriber?" },
        class: "bg-error/10 hover:bg-error/20 border border-error/30 text-error px-4 py-2 text-[10px] font-bold transition-colors cursor-pointer" %>
  </div>
</div>
