<%= form_with model: subscriber, class: "space-y-4" do |f| %>
  <% if subscriber.errors.any? %>
    <div class="bg-error/10 border border-error/30 p-3">
      <div class="text-[10px] text-error font-bold mb-2">PLEASE FIX THE FOLLOWING ERRORS:</div>
      <ul class="text-[10px] text-error space-y-1">
        <% subscriber.errors.full_messages.each do |message| %>
          <li>- <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <label class="text-[10px] text-base-content/60 mb-1 block font-bold">EMAIL</label>
    <%= f.email_field :email, required: true, autofocus: true,
        class: "w-full border border-base-content/20 bg-base-100 px-3 py-2 text-xs focus:border-primary focus:outline-none",
        placeholder: "subscriber@example.com" %>
  </div>

  <div class="grid grid-cols-2 gap-4">
    <div>
      <label class="text-[10px] text-base-content/60 mb-1 block font-bold">FIRST NAME</label>
      <%= f.text_field :first_name,
          class: "w-full border border-base-content/20 bg-base-100 px-3 py-2 text-xs focus:border-primary focus:outline-none",
          placeholder: "John" %>
    </div>
    <div>
      <label class="text-[10px] text-base-content/60 mb-1 block font-bold">LAST NAME</label>
      <%= f.text_field :last_name,
          class: "w-full border border-base-content/20 bg-base-100 px-3 py-2 text-xs focus:border-primary focus:outline-none",
          placeholder: "Doe" %>
    </div>
  </div>

  <% if subscriber.persisted? %>
    <div>
      <label class="text-[10px] text-base-content/60 mb-1 block font-bold">STATUS</label>
      <%= f.select :status, Subscriber.statuses.keys.map { |s| [s.titleize, s] },
          {},
          class: "w-full border border-base-content/20 bg-base-100 px-3 py-2 text-xs focus:border-primary focus:outline-none" %>
    </div>
  <% end %>

  <div class="pt-2 flex items-center gap-3">
    <%= f.submit subscriber.persisted? ? "SAVE CHANGES" : "ADD SUBSCRIBER",
        class: "bg-primary text-primary-content hover:bg-primary/80 px-4 py-2 text-[10px] sm:text-xs font-bold transition-colors cursor-pointer" %>
    <%= link_to "CANCEL", subscribers_path, class: "text-[10px] text-base-content/60 hover:underline font-bold" %>
  </div>
<% end %>
