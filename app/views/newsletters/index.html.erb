<% content_for :title, "Newsletters - RighteousDispatch" %>

<div class="max-w-4xl mx-auto">
  <div class="flex items-center justify-between mb-6">
    <div>
      <h1 class="text-lg sm:text-xl font-bold">NEWSLETTERS</h1>
      <p class="text-[10px] sm:text-xs text-base-content/60 mt-1">Create and manage your email newsletters</p>
    </div>
    <%= link_to new_newsletter_path, class: "bg-primary text-primary-content hover:bg-primary/80 px-4 py-2 text-[10px] sm:text-xs font-bold transition-colors" do %>
      + NEW NEWSLETTER
    <% end %>
  </div>

  <% if @newsletters.any? %>
    <div class="border border-base-content/20">
      <div class="bg-base-content/5 p-3 border-b border-base-content/20">
        <div class="grid grid-cols-12 gap-4 text-[10px] font-bold text-base-content/60">
          <div class="col-span-5">TITLE</div>
          <div class="col-span-2">STATUS</div>
          <div class="col-span-3">UPDATED</div>
          <div class="col-span-2">ACTIONS</div>
        </div>
      </div>
      <div class="divide-y divide-base-content/10">
        <% @newsletters.each do |newsletter| %>
          <div class="p-3 hover:bg-base-200 transition-colors">
            <div class="grid grid-cols-12 gap-4 items-center">
              <div class="col-span-5">
                <%= link_to edit_newsletter_path(newsletter), class: "font-bold text-xs hover:text-primary" do %>
                  <%= newsletter.title %>
                <% end %>
                <% if newsletter.subject.present? %>
                  <div class="text-[10px] text-base-content/60 mt-0.5"><%= newsletter.subject %></div>
                <% end %>
              </div>
              <div class="col-span-2">
                <%
                  status_class = case newsletter.status
                                 when "draft" then "bg-base-content/20 text-base-content"
                                 when "scheduled" then "bg-warning/20 text-warning"
                                 when "sending" then "bg-info/20 text-info"
                                 when "sent" then "bg-success/20 text-success"
                                 end
                %>
                <span class="<%= status_class %> px-2 py-1 text-[10px] font-bold"><%= newsletter.status.upcase %></span>
              </div>
              <div class="col-span-3 text-[10px] text-base-content/60">
                <% if newsletter.sent? && newsletter.sent_at %>
                  Sent <%= newsletter.sent_at.strftime("%b %d, %Y") %>
                <% elsif newsletter.scheduled? && newsletter.scheduled_at %>
                  <span class="text-warning">Scheduled <%= newsletter.scheduled_at.strftime("%b %d, %Y %I:%M %p") %></span>
                <% else %>
                  <%= newsletter.updated_at.strftime("%b %d, %Y %H:%M") %>
                <% end %>
              </div>
              <div class="col-span-2 flex items-center gap-2">
                <%= link_to "EDIT", edit_newsletter_path(newsletter), class: "text-[10px] text-primary hover:underline font-bold" %>
                <% unless newsletter.sent? || newsletter.sending? %>
                  <%= button_to "DELETE", newsletter_path(newsletter), method: :delete,
                      data: { turbo_confirm: "Are you sure you want to delete this newsletter?" },
                      class: "text-[10px] text-error hover:underline font-bold" %>
                <% end %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% else %>
    <div class="border border-base-content/20 p-8 text-center">
      <div class="text-base-content/40 mb-4">
        <svg class="w-16 h-16 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/>
        </svg>
      </div>
      <div class="text-sm font-bold mb-2">NO NEWSLETTERS YET</div>
      <p class="text-[10px] text-base-content/60 mb-4">Create your first newsletter to start reaching your subscribers.</p>
      <%= link_to new_newsletter_path, class: "inline-block bg-primary text-primary-content hover:bg-primary/80 px-4 py-2 text-[10px] font-bold transition-colors" do %>
        CREATE YOUR FIRST NEWSLETTER
      <% end %>
    </div>
  <% end %>
</div>
