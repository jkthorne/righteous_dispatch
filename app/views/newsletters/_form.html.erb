<%= form_with model: newsletter, class: "space-y-4" do |f| %>
  <% if newsletter.errors.any? %>
    <div class="bg-error/10 border border-error/30 p-3">
      <div class="text-[10px] text-error font-bold mb-2">PLEASE FIX THE FOLLOWING ERRORS:</div>
      <ul class="text-[10px] text-error space-y-1">
        <% newsletter.errors.full_messages.each do |message| %>
          <li>- <%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <label class="text-[10px] text-base-content/60 mb-1 block font-bold">TITLE (INTERNAL USE)</label>
    <%= f.text_field :title, required: true, autofocus: true,
        class: "w-full border border-base-content/20 bg-base-100 px-3 py-2 text-xs focus:border-primary focus:outline-none",
        placeholder: "e.g., Weekly Update - December 2025" %>
  </div>

  <div>
    <label class="text-[10px] text-base-content/60 mb-1 block font-bold">EMAIL SUBJECT</label>
    <%= f.text_field :subject,
        class: "w-full border border-base-content/20 bg-base-100 px-3 py-2 text-xs focus:border-primary focus:outline-none",
        placeholder: "The subject line your subscribers will see" %>
  </div>

  <div>
    <label class="text-[10px] text-base-content/60 mb-1 block font-bold">PREVIEW TEXT (OPTIONAL)</label>
    <%= f.text_field :preview_text,
        class: "w-full border border-base-content/20 bg-base-100 px-3 py-2 text-xs focus:border-primary focus:outline-none",
        placeholder: "Short preview text shown in email clients" %>
    <div class="text-[9px] text-base-content/40 mt-1">This appears after the subject in most email clients.</div>
  </div>

  <div>
    <label class="text-[10px] text-base-content/60 mb-1 block font-bold">CONTENT</label>
    <div class="border border-base-content/20 bg-base-100">
      <%= f.rich_text_area :content, class: "min-h-[300px]" %>
    </div>
  </div>

  <div class="pt-2 flex items-center gap-3">
    <%= f.submit newsletter.persisted? ? "SAVE CHANGES" : "CREATE NEWSLETTER",
        class: "bg-primary text-primary-content hover:bg-primary/80 px-4 py-2 text-[10px] sm:text-xs font-bold transition-colors cursor-pointer" %>
    <%= link_to "CANCEL", newsletters_path, class: "text-[10px] text-base-content/60 hover:underline font-bold" %>
  </div>
<% end %>
