<% content_for :title, "Edit: #{@newsletter.title} - RighteousDispatch" %>

<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <div class="text-[10px] text-base-content/60 mb-2">
      <%= link_to "NEWSLETTERS", newsletters_path, class: "hover:underline" %> / EDIT
    </div>
    <div class="flex items-center justify-between">
      <h1 class="text-lg sm:text-xl font-bold"><%= @newsletter.title %></h1>
      <%
        status_class = case @newsletter.status
                       when "draft" then "bg-base-content/20 text-base-content"
                       when "scheduled" then "bg-warning/20 text-warning"
                       when "sending" then "bg-info/20 text-info"
                       when "sent" then "bg-success/20 text-success"
                       end
      %>
      <span class="<%= status_class %> px-2 py-1 text-[10px] font-bold"><%= @newsletter.status.upcase %></span>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2">
      <div class="border border-base-content/20">
        <div class="bg-base-content/5 p-3 border-b border-base-content/20">
          <div class="text-[10px] sm:text-xs font-bold">CONTENT</div>
        </div>
        <div class="p-4 sm:p-6">
          <%= render "form", newsletter: @newsletter %>
        </div>
      </div>
    </div>

    <div class="space-y-4">
      <div class="border border-base-content/20">
        <div class="bg-base-content/5 p-3 border-b border-base-content/20">
          <div class="text-[10px] sm:text-xs font-bold">ACTIONS</div>
        </div>
        <div class="p-4 space-y-3">
          <% if @newsletter.draft? || @newsletter.scheduled? %>
            <%= link_to confirm_send_newsletter_path(@newsletter), class: "block w-full text-center bg-success text-success-content hover:bg-success/80 px-4 py-2 text-[10px] font-bold transition-colors" do %>
              SEND NEWSLETTER
            <% end %>
          <% elsif @newsletter.sending? %>
            <div class="w-full bg-info/20 text-info text-center px-4 py-2 text-[10px] font-bold">
              SENDING IN PROGRESS...
            </div>
          <% elsif @newsletter.sent? %>
            <div class="w-full bg-success/20 text-success text-center px-4 py-2 text-[10px] font-bold">
              SENT <%= @newsletter.sent_at&.strftime("%b %d, %Y") %>
            </div>
          <% end %>
          <%= link_to preview_newsletter_path(@newsletter), class: "block w-full text-center bg-base-content/10 hover:bg-base-content/20 border border-base-content/20 px-4 py-2 text-[10px] font-bold transition-colors" do %>
            PREVIEW EMAIL
          <% end %>
          <% unless @newsletter.sent? || @newsletter.sending? %>
            <%= button_to "DELETE NEWSLETTER", newsletter_path(@newsletter), method: :delete,
                data: { turbo_confirm: "Are you sure you want to delete this newsletter?" },
                class: "w-full bg-error/10 hover:bg-error/20 border border-error/30 text-error px-4 py-2 text-[10px] font-bold transition-colors cursor-pointer" %>
          <% end %>
        </div>
      </div>

      <div class="border border-base-content/20">
        <div class="bg-base-content/5 p-3 border-b border-base-content/20">
          <div class="text-[10px] sm:text-xs font-bold">INFO</div>
        </div>
        <div class="p-4 space-y-3">
          <div>
            <div class="text-[10px] text-base-content/60">CREATED</div>
            <div class="text-xs font-bold"><%= @newsletter.created_at.strftime("%b %d, %Y %H:%M") %></div>
          </div>
          <div>
            <div class="text-[10px] text-base-content/60">LAST UPDATED</div>
            <div class="text-xs font-bold"><%= @newsletter.updated_at.strftime("%b %d, %Y %H:%M") %></div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
