<% content_for :title, "Send: #{@newsletter.title} - RighteousDispatch" %>

<div class="max-w-lg mx-auto">
  <div class="mb-6">
    <div class="text-[10px] text-base-content/60 mb-2">
      <%= link_to "NEWSLETTERS", newsletters_path, class: "hover:underline" %> /
      <%= link_to @newsletter.title.upcase, edit_newsletter_path(@newsletter), class: "hover:underline" %> /
      SEND
    </div>
    <h1 class="text-lg sm:text-xl font-bold">SEND NEWSLETTER</h1>
  </div>

  <div class="border border-base-content/20 mb-4">
    <div class="bg-base-content/5 p-3 border-b border-base-content/20">
      <div class="text-[10px] sm:text-xs font-bold">NEWSLETTER DETAILS</div>
    </div>
    <div class="p-4 sm:p-6">
      <div class="space-y-3">
        <div>
          <div class="text-[10px] text-base-content/60 mb-1">TITLE</div>
          <div class="text-xs font-bold"><%= @newsletter.title %></div>
        </div>
        <div>
          <div class="text-[10px] text-base-content/60 mb-1">SUBJECT LINE</div>
          <div class="text-xs"><%= @newsletter.subject %></div>
        </div>
        <% if @newsletter.preview_text.present? %>
          <div>
            <div class="text-[10px] text-base-content/60 mb-1">PREVIEW TEXT</div>
            <div class="text-xs text-base-content/60"><%= @newsletter.preview_text %></div>
          </div>
        <% end %>
      </div>
    </div>
  </div>

  <!-- Audience Selection -->
  <% if @tags.any? %>
    <div class="border border-base-content/20 mb-4">
      <div class="bg-base-content/5 p-3 border-b border-base-content/20">
        <div class="text-[10px] sm:text-xs font-bold">TARGET AUDIENCE</div>
      </div>
      <div class="p-4">
        <p class="text-[10px] text-base-content/60 mb-3">
          Select specific tags to target, or leave empty to send to all subscribers.
        </p>
        <%= form_with url: update_tags_newsletter_path(@newsletter), method: :patch, class: "space-y-3", data: { turbo_frame: "_top" } do |f| %>
          <div class="flex flex-wrap gap-2">
            <% @tags.each do |tag| %>
              <label class="inline-flex items-center gap-1.5 cursor-pointer">
                <%= check_box_tag "tag_ids[]", tag.id, @newsletter.tag_ids.include?(tag.id),
                    class: "w-3 h-3 accent-primary" %>
                <span class="text-[10px] font-bold"><%= tag.name.upcase %></span>
                <span class="text-[10px] text-base-content/40">(<%= tag.subscribers.confirmed.count %>)</span>
              </label>
            <% end %>
          </div>
          <%= submit_tag "UPDATE AUDIENCE",
              class: "bg-base-content/10 hover:bg-base-content/20 border border-base-content/20 px-3 py-1.5 text-[10px] font-bold transition-colors cursor-pointer" %>
        <% end %>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-2 gap-px bg-base-content/10 border border-base-content/10 mb-6">
    <div class="bg-base-100 p-4 text-center">
      <div class="text-[10px] text-base-content/60 mb-1">RECIPIENTS</div>
      <div class="text-2xl font-bold text-success tabular-nums"><%= @recipient_count %></div>
      <div class="text-[10px] text-base-content/50">
        <% if @newsletter.has_tag_filters? %>
          filtered by <%= @newsletter.tags.pluck(:name).join(", ") %>
        <% else %>
          all confirmed subscribers
        <% end %>
      </div>
    </div>
    <div class="bg-base-100 p-4 text-center">
      <div class="text-[10px] text-base-content/60 mb-1">STATUS</div>
      <div class="text-2xl font-bold"><%= @newsletter.status.upcase %></div>
      <div class="text-[10px] text-base-content/50">current status</div>
    </div>
  </div>

  <!-- Send Now Section -->
  <div class="border border-base-content/20 mb-4">
    <div class="bg-base-content/5 p-3 border-b border-base-content/20">
      <div class="text-[10px] sm:text-xs font-bold">SEND NOW</div>
    </div>
    <div class="p-4">
      <p class="text-[10px] text-base-content/60 mb-4">
        Send this newsletter immediately to <%= @recipient_count %> <%= @newsletter.has_tag_filters? ? "filtered" : "confirmed" %> subscriber<%= @recipient_count == 1 ? "" : "s" %>.
      </p>
      <%= button_to send_newsletter_newsletter_path(@newsletter),
          method: :post,
          class: "w-full bg-success text-success-content hover:bg-success/80 px-6 py-2.5 text-xs font-bold transition-colors cursor-pointer",
          data: { turbo_confirm: "Are you sure you want to send this newsletter to #{@recipient_count} subscribers? This cannot be undone." } do %>
        SEND NOW TO <%= @recipient_count %> SUBSCRIBERS
      <% end %>
    </div>
  </div>

  <!-- Schedule Section -->
  <div class="border border-base-content/20 mb-4">
    <div class="bg-base-content/5 p-3 border-b border-base-content/20">
      <div class="text-[10px] sm:text-xs font-bold">SCHEDULE FOR LATER</div>
    </div>
    <div class="p-4">
      <p class="text-[10px] text-base-content/60 mb-4">
        Schedule this newsletter to be sent at a specific date and time.
      </p>
      <%= form_with url: schedule_newsletter_path(@newsletter), method: :post, class: "space-y-4" do |f| %>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="text-[10px] text-base-content/60 mb-1 block font-bold">DATE</label>
            <%= date_field_tag :scheduled_date, nil,
                min: Date.current,
                required: true,
                class: "w-full border border-base-content/20 bg-base-100 px-3 py-2 text-xs focus:border-primary focus:outline-none" %>
          </div>
          <div>
            <label class="text-[10px] text-base-content/60 mb-1 block font-bold">TIME</label>
            <%= time_field_tag :scheduled_time, nil,
                required: true,
                class: "w-full border border-base-content/20 bg-base-100 px-3 py-2 text-xs focus:border-primary focus:outline-none" %>
          </div>
        </div>
        <div class="text-[10px] text-base-content/40">
          Times are in your local timezone.
        </div>
        <%= submit_tag "SCHEDULE NEWSLETTER",
            class: "w-full bg-primary text-primary-content hover:bg-primary/80 px-6 py-2.5 text-xs font-bold transition-colors cursor-pointer" %>
      <% end %>
    </div>
  </div>

  <div class="flex items-center justify-between">
    <%= link_to preview_newsletter_path(@newsletter), class: "text-[10px] text-base-content/60 hover:underline font-bold" do %>
      <- BACK TO PREVIEW
    <% end %>
  </div>
</div>
