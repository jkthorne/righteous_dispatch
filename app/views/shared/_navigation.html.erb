<nav class="border-b border-base-content/20 bg-base-100">
  <div class="max-w-7xl mx-auto px-4">
    <div class="flex items-center justify-between h-12">
      <!-- Logo/Brand -->
      <div class="flex items-center gap-4">
        <%= link_to root_path, class: "text-xs sm:text-sm font-bold hover:text-primary transition-colors" do %>
          RIGHTEOUSDISPATCH
        <% end %>
        <span class="text-[9px] text-base-content/50 hidden sm:inline">SEND TRUTH BOLDLY</span>
      </div>

      <!-- Navigation Links -->
      <div class="flex items-center gap-3 sm:gap-4">
        <% if signed_in? %>
          <%= link_to "DASHBOARD", dashboard_path,
              class: "text-[10px] sm:text-xs font-bold #{request.path == dashboard_path ? 'text-primary' : 'text-base-content/60 hover:text-primary'}" %>
          <%= link_to "NEWSLETTERS", newsletters_path,
              class: "text-[10px] sm:text-xs font-bold #{request.path.start_with?('/newsletters') ? 'text-primary' : 'text-base-content/60 hover:text-primary'}" %>
          <%= link_to "SUBSCRIBERS", subscribers_path,
              class: "text-[10px] sm:text-xs font-bold #{request.path.start_with?('/subscribers') ? 'text-primary' : 'text-base-content/60 hover:text-primary'}" %>
          <%= link_to "TAGS", tags_path,
              class: "text-[10px] sm:text-xs font-bold #{request.path.start_with?('/tags') ? 'text-primary' : 'text-base-content/60 hover:text-primary'}" %>
          <%= link_to "FORMS", signup_forms_path,
              class: "text-[10px] sm:text-xs font-bold #{request.path.start_with?('/signup_forms') ? 'text-primary' : 'text-base-content/60 hover:text-primary'}" %>
          <span class="text-[10px] sm:text-xs text-base-content/40 hidden sm:inline">|</span>
          <%= link_to settings_path,
              class: "text-[10px] sm:text-xs text-base-content/60 hover:text-primary hidden sm:inline" do %>
            <%= current_user.email %>
          <% end %>
          <button type="button" onclick="toggleTheme()"
              class="p-1.5 text-base-content/60 hover:text-primary transition-colors cursor-pointer"
              title="Toggle dark mode"
              id="theme-toggle-auth">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
            </svg>
          </button>
          <%= button_to "SIGN OUT", session_path, method: :delete,
              class: "bg-base-content/10 hover:bg-base-content/20 border border-base-content/20 px-3 py-1.5 text-[10px] sm:text-xs font-bold transition-colors cursor-pointer" %>
        <% else %>
          <%= link_to "SIGN IN", new_session_path,
              class: "text-[10px] sm:text-xs font-bold text-primary hover:underline" %>
          <%= link_to "REGISTER", new_registration_path,
              class: "bg-primary text-primary-content hover:bg-primary/80 px-3 py-1.5 text-[10px] font-bold transition-colors" %>
          <button type="button" onclick="toggleTheme()"
              class="p-1.5 text-base-content/60 hover:text-primary transition-colors cursor-pointer"
              title="Toggle dark mode"
              id="theme-toggle-unauth">
            <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
            </svg>
          </button>
        <% end %>
      </div>
    </div>
  </div>
</nav>
