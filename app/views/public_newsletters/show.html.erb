<% content_for :title, "#{@newsletter.subject} - RighteousDispatch" %>

<div class="max-w-2xl mx-auto">
  <div class="border border-base-content/20">
    <div class="bg-base-content text-base-content-content p-4 text-center">
      <div class="text-xs font-bold tracking-widest text-white">RIGHTEOUSDISPATCH</div>
    </div>

    <div class="p-6 sm:p-8">
      <% if @newsletter.preview_text.present? %>
        <p class="text-sm text-base-content/60 mb-4 italic"><%= @newsletter.preview_text %></p>
      <% end %>

      <div class="prose prose-sm max-w-none">
        <%= @newsletter.content %>
      </div>
    </div>

    <div class="bg-base-content/5 p-4 border-t border-base-content/10 text-center">
      <p class="text-[10px] text-base-content/60 mb-2">
        Sent by <%= @user.name %> via RighteousDispatch
      </p>
      <p class="text-[10px] text-base-content/40">
        <%= link_to "Unsubscribe", @unsubscribe_url, class: "hover:underline" %>
      </p>
    </div>
  </div>
</div>
