<% content_for :title, "#{@signup_form.title} - RighteousDispatch" %>

<div class="max-w-4xl mx-auto">
  <div class="mb-6">
    <div class="text-[10px] text-base-content/60 mb-2">
      <%= link_to "SIGNUP FORMS", signup_forms_path, class: "hover:underline" %> / VIEW
    </div>
    <div class="flex items-center justify-between">
      <h1 class="text-lg sm:text-xl font-bold"><%= @signup_form.title %></h1>
      <% if @signup_form.active? %>
        <span class="bg-success/20 text-success px-2 py-1 text-[10px] font-bold">ACTIVE</span>
      <% else %>
        <span class="bg-base-content/20 text-base-content/60 px-2 py-1 text-[10px] font-bold">INACTIVE</span>
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <div class="lg:col-span-2 space-y-6">
      <!-- Preview -->
      <div class="border border-base-content/20">
        <div class="bg-base-content/5 p-3 border-b border-base-content/20">
          <div class="text-[10px] sm:text-xs font-bold">PREVIEW</div>
        </div>
        <div class="p-6">
          <div class="max-w-md mx-auto border border-base-content/10 p-6 bg-base-200">
            <% if @signup_form.headline.present? %>
              <h3 class="text-lg font-bold mb-2"><%= @signup_form.headline %></h3>
            <% end %>
            <% if @signup_form.description.present? %>
              <p class="text-sm text-base-content/80 mb-4"><%= @signup_form.description %></p>
            <% end %>
            <div class="flex gap-2">
              <input type="email" placeholder="your@email.com" disabled
                  class="flex-1 border border-base-content/20 bg-base-100 px-3 py-2 text-sm">
              <button disabled class="bg-primary text-primary-content px-4 py-2 text-sm font-bold">
                <%= @signup_form.button_text %>
              </button>
            </div>
          </div>
        </div>
      </div>

      <!-- Embed Code -->
      <div class="border border-base-content/20">
        <div class="bg-base-content/5 p-3 border-b border-base-content/20">
          <div class="text-[10px] sm:text-xs font-bold">EMBED CODE</div>
        </div>
        <div class="p-4 space-y-4">
          <div>
            <div class="text-[10px] text-base-content/60 mb-2 font-bold">HTML EMBED</div>
            <div class="bg-base-300 p-3 font-mono text-[10px] overflow-x-auto">
              <pre class="whitespace-pre-wrap break-all">&lt;form action="<%= public_signup_url(@signup_form.public_id) %>" method="POST"&gt;
  &lt;input type="email" name="email" placeholder="your@email.com" required&gt;
  &lt;input type="text" name="name" placeholder="Your name (optional)"&gt;
  &lt;button type="submit"&gt;<%= @signup_form.button_text %>&lt;/button&gt;
&lt;/form&gt;</pre>
            </div>
          </div>

          <div>
            <div class="text-[10px] text-base-content/60 mb-2 font-bold">STANDALONE PAGE URL</div>
            <div class="flex items-center gap-2">
              <input type="text" readonly value="<%= public_signup_url(@signup_form.public_id) %>"
                  class="flex-1 bg-base-300 border border-base-content/20 px-3 py-2 text-xs font-mono">
              <%= link_to "OPEN", public_signup_path(@signup_form.public_id), target: "_blank",
                  class: "bg-primary text-primary-content hover:bg-primary/80 px-4 py-2 text-[10px] font-bold transition-colors" %>
            </div>
          </div>

          <div>
            <div class="text-[10px] text-base-content/60 mb-2 font-bold">JSON API ENDPOINT</div>
            <div class="bg-base-300 p-3 font-mono text-[10px] overflow-x-auto">
              <pre class="whitespace-pre-wrap break-all">POST <%= public_signup_url(@signup_form.public_id) %>
Content-Type: application/json

{"email": "subscriber@example.com", "name": "John Doe"}</pre>
            </div>
          </div>
        </div>
      </div>
    </div>

    <div class="space-y-4">
      <!-- Actions -->
      <div class="border border-base-content/20">
        <div class="bg-base-content/5 p-3 border-b border-base-content/20">
          <div class="text-[10px] sm:text-xs font-bold">ACTIONS</div>
        </div>
        <div class="p-4 space-y-3">
          <%= link_to edit_signup_form_path(@signup_form), class: "block w-full text-center bg-base-content/10 hover:bg-base-content/20 border border-base-content/20 px-4 py-2 text-[10px] sm:text-xs font-bold transition-colors" do %>
            EDIT FORM
          <% end %>
          <%= link_to public_signup_path(@signup_form.public_id), target: "_blank", class: "block w-full text-center bg-base-content/10 hover:bg-base-content/20 border border-base-content/20 px-4 py-2 text-[10px] sm:text-xs font-bold transition-colors" do %>
            VIEW LIVE FORM
          <% end %>
          <%= button_to "DELETE FORM", signup_form_path(@signup_form), method: :delete,
              data: { turbo_confirm: "Are you sure you want to delete this form?" },
              class: "w-full bg-error/10 hover:bg-error/20 border border-error/30 text-error px-4 py-2 text-[10px] sm:text-xs font-bold transition-colors cursor-pointer" %>
        </div>
      </div>

      <!-- Info -->
      <div class="border border-base-content/20">
        <div class="bg-base-content/5 p-3 border-b border-base-content/20">
          <div class="text-[10px] sm:text-xs font-bold">INFO</div>
        </div>
        <div class="p-4 space-y-3">
          <div>
            <div class="text-[10px] text-base-content/60">CREATED</div>
            <div class="text-xs font-bold"><%= @signup_form.created_at.strftime("%b %d, %Y %H:%M") %></div>
          </div>
          <div>
            <div class="text-[10px] text-base-content/60">FORM ID</div>
            <div class="text-xs font-bold font-mono"><%= @signup_form.public_id %></div>
          </div>
          <% if @signup_form.tags.any? %>
            <div>
              <div class="text-[10px] text-base-content/60 mb-2">AUTO-TAGS</div>
              <div class="flex flex-wrap gap-1">
                <% @signup_form.tags.each do |tag| %>
                  <span class="bg-base-content/10 px-2 py-1 text-[10px] font-bold"><%= tag.name.upcase %></span>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
